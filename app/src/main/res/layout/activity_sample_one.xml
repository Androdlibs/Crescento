<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <developer.shivam.library.CrescentoImageView
        android:id="@+id/crescentoImageView"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:elevation="5dp"
        android:scaleType="centerCrop"
        app:curvature="100dp"
        android:src="@drawable/rogue"
        app:gravity="bottom"
        android:layout_alignParentBottom="true"
        app:curvatureDirection="outward"/>

    <!--<android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="170dp"
        android:layout_marginRight="40dp"
        android:src="@drawable/ic_add_white_24dp"
        app:backgroundTint="#ff5722"
        app:elevation="10dp" />-->

    <TextView
        android:id="@+id/tvStory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/crescentoImageView"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="STORY"
        android:textColor="#212121" />

    <TextView
        android:id="@+id/tvStoryLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvStory"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="The Rebellion makes a risky move to steal the plans to the Death Star. Setting up the epic saga to follow."
        android:textColor="#848484"
        android:textSize="13sp" />

</RelativeLayout>